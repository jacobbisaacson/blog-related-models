<%- include('../partials/header.ejs') %>

  <h2>Newsfeed: All the latest articles (Article index)</h2>

<ul>
  <% articles.forEach((article)=>{%>
  <li>
    <div>
      <strong>
        <a href="/articles/<%=article.id%>"><%= article.title%></a>
      </strong>
    </div>
    <div>
      <small><%= article.posted.toLocaleString()%></small>
    </div>
    <div>
      (by: <%= article.posted %>)
    </div>  
  <% })%>
</ul>

